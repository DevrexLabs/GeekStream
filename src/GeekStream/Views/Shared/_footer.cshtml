@model GeekStream.Models.IndexModel

@{
    Func<string, string> cutHelper = input => input.Length > 35 ? input.Substring(0, 35) + "..." : input;
}
<!-- Footer last updated @DateTime.Now -->
<div class="footer-inner">
    <div class="entry" style="padding:0 50px;overflow: hidden">
        <div style="float: left; width: 33%;">
            <h3>Recent Items</h3>
            <ul style="margin:0 15px 0 0;">
                @foreach (var item in Model.RecentItems)
                {
                    <li>
                        <a href="@item.Url" target="_blank" title="@item.Title">@cutHelper(item.Title)</a>
                        <div class="footermeta">
                            @item.Summary
                        </div>
                    </li>
                }
            </ul>
        </div>

        <div style="float: left; width: 33%;">
            <h3>Popular Feeds</h3>
            <ul style="margin:0 15px 0 0;">
                @foreach (var item in Model.PopularFeeds)
                {
                    <li>
                        @Html.ActionLink(cutHelper(item.Title), "Feed", "Home", new { id = item.LongId }, new { title = item.Title })
                        <div class="footermeta">
                            @item.Description
                        </div>
                    </li>
                }
            </ul>
        </div>
    
        <div style="float: left; width: 33%;">
            <h3>Popular Items</h3>
            <ul style="margin:0 15px 0 0;">
                @foreach (var item in Model.PopularItems)
                {
                    <li>
                        <a href="@item.Url" target="_blank" title="@item.Title">@cutHelper(item.Title)</a>
                        <div class="footermeta">
                            @item.Summary
                        </div>
                    </li>
                }
            </ul>
        </div>

    </div>
        <div style="border-top: 1px solid #cccccc; display: block;clear:both;text-align: center;padding-top:15px;">
            <a title="Powered by #liveDB" href="http://livedb.devrex.se/" target="_blank"><img src="http://www.devrex.se/content/images/powered_by_livedb_50x50.png" alt="#liveDB"></a>
        </div>
</div>